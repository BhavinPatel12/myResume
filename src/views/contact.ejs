<%- include('./partials/header.ejs') %>
    <div class="container-fluid bg-dark">
        <div class="row">
            <div class="col-sm-2">
                <%- include('./partials/sidebar.ejs', {page_name : 'Contact' }) %>
            </div>
            <div class="col-sm-10">
                <!-- main-content -->
                <div class="container mt-5">
                    <h1 class="text-warning mb-5 border-bottom">CONTACT US</h1>
                    <div class="row text-white mb-5">
                        <p class="mx-auto mb-5">
                            Do you have any questions? Please do not hesitate to contact. I will come back to you within
                            a matter of hours to help you.
                        </p>
                        <div class="col-sm-9 mb-5">
                            <form action="/send-email" method="POST">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="inputName">Your Name</label>
                                        <input type="text" class="form-control mt-2" id="inputName" name="inputName" />
                                    </div>
                                    <div class="col-md-6">
                                        <label for="inputEmail">Your Email *</label>
                                        <input type="email" class="form-control mt-2" name="inputEmail" id="inputEmail"
                                            required />
                                    </div>
                                    <div class="col-md-12">
                                        <label for="inputSubject">Your Subject</label>
                                        <input type="text" class="form-control mt-2" name="inputSubject"
                                            id="inputSubject" />
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label for="inputTextarea">Your message</label>
                                        <textarea class="form-control mt-2" name="inputTextarea"
                                            id="inputTextarea"></textarea>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Send</button>
                            </form>
                        </div>
                        <div class="col-sm-3 text-center">
                            <ul class="list-unstyled">
                                <li>
                                    <i class="fas fa-map-marker-alt fa-2x i-color"></i>
                                    <p>Rajkot, Gujarat, India</p>
                                </li>
                                <li>
                                    <i class="fas fa-phone mt-4 fa-2x i-color"></i>
                                    <p>+91 8866069919</p>
                                </li>
                                <li>
                                    <i class="fas fa-envelope mt-4 fa-2x i-color"></i>
                                    <p>bhavinpatel5638@gmail.com</p>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <a href="#" target="_blank"><i class="fab fa-twitter i-color"></i></a>
                    <a href="#" target="_blank"><i class="fab fa-facebook-f i-color mx-3"></i></a>
                    <a href="#" target="_blank"><i class="fab fa-instagram i-color"></i></a>
                    <a href="#" target="_blank"><i class="fab fa-linkedin-in i-color mx-3"></i></a>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>